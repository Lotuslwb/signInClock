<%- include("header.ejs",{"title":username,"routes":routes}) %>
<style>
    .daka-cover-preview {
        width: 200px;
    }

    .editor {
        margin-left: 120px;
    }

    .search-cell-title {
        width: 90px;
    }

    s {
        color: red;
        text-decoration: none;
    }

    .search-cell-h2 {
        line-height: 1.5;
        border-top: 2px solid #ccc;
        font-size: 30px;
    }
</style>
<div class="main">

    <div id="article" class="check-account">
        <form id="J_Form" class="pt40">
            <div class="J-articlePart">

                <div class="search-cell">
                    <span class="search-cell-title m0-left">红色标题：<br/>
                        <s>最大字数20<br/>请勿换行</s></span></span>
                    <div class="inline">
                        <input type="text" name="H1Title" data-rules="{required : false,maxlength:20}"
                               value="<%= doc.H1Title %>">
                    </div>
                </div>

                <div class="search-cell">
                    <span class="search-cell-title m0-left">黑色标题：<br/>
                        <s>最大字数20<br/>请勿换行</s></span>
                    <div class="inline">
                        <input type="text" name="H2Title" data-rules="{required : false,maxlength:20}"
                               value="<%= doc.H2Title %>">
                    </div>
                </div>

                <div class="search-cell">
                    <label class="search-cell-title m0-left"><s>*</s>文本：<br/>
                        <s>最大字数100<br/>请勿换行</s>
                    </label>
                    <textarea type="text" name="Text" class="control-row4 input-large"
                              data-rules="{required : true,maxlength:100}"
                    ><%= doc.Text %></textarea>
                </div>


                <div class="search-cell">
                    <span class="search-cell-title m0-left"><s>*</s>Banner链接：</span>
                    <div class="inline">
                        <input type="text" name="BannerLink" data-rules="{required : true}"
                               value="<%= doc.BannerLink %>">
                    </div>
                </div>
                <div class="J_Uploader_box">
                    <div class="search-cell">
                        <span class="search-cell-title m0-left">上传封页</span>
                        <div class="inline">
                            <div class="J_Uploader"></div>
                            <s>尺寸:宽高(640*87)</s>
                        </div>
                    </div>
                    <div class="search-cell J-previewBox"
                            <% if(!doc.BannerImgURL){ %>
                         style="display: none"
                            <% } %>
                    >
                        <span class="search-cell-title m0-left"><s>*</s>封页预览</span>
                        <div class="inline">
                            <div class="J-preview">
                                <img src="<%= doc.BannerImgURL %>" class="daka-cover-preview">
                            </div>
                        </div>
                    </div>
                </div>

            </div>


            <div class="row">
                <div class="form-actions text-center">
                    <a class="button button-primary J-submit">确定</a>
                </div>
            </div>
        </form>

    </div>


    <!-- 此节点内部的内容会在弹出框内显示,默认隐藏此节点-->
    <div id="adminDialog" class="bui-hidden">
        <form id="dialog-form" class="form-horizontal">

        </form>
    </div>
</div>

<script>
    var coverUrl = '<%- doc.BannerImgURL %>';
</script>
<script src="http://g.alicdn.com/bui/seajs/2.3.0/sea.js"></script>
<script src="http://g.alicdn.com/bui/bui/1.1.21/config.js"></script>

<script type="text/javascript" src="/javascripts/admin/wangEditor.min.js"></script>
<script type="text/javascript" src="/javascripts/admin/daka_config.js"></script>


<%- include("footer.ejs") %>
