    </dt>
    <dd class="user_icon">
        <input type="text" placeholder="账号" name="username" class="login_txtbx"/>
    </dd>
    <dd class="pwd_icon">
        <input type="password" placeholder="密码" name="password" class="login_txtbx"/>
    </dd>
    <dd>
        <input type="button" value="立即登陆" class="submit_btn J-login"/>
    </dd>
    <dd>
        <p>技术支持:837531387@qq.com</p>
    </dd>
</dl>

<script src="/javascripts/api.js"></script>
<script>

    $('.J-login').click(function () {
        if ($(this).hasClass('weui_btn_disabled')) {
            return false;
        }

        var data = {
            'username': $("[name='username']").val(),
            'password': $("[name='password']").val()
        }

        $.ajax({
            type: 'POST',
            url: '/admin/api/login',
            data: data,
            success: function (data) {
                console.log(data);
                if (data.status == '200') {
                    window.location.href = '/admin/teacherVote';
                } else {
                    alert(data.errmsg);
                }
            },
            dataType: 'json'
        });
    });
</script>

