<%- include("header.ejs",{"title":username,"routes":routes,needNav:true}) %>
<style>
    .daka-cover-preview {
        width: 200px;
    }

    .editor {
        margin-left: 120px;
    }

    .search-cell-title {
        width: 90px;
    }

    s {
        color: red;
        text-decoration: none;
    }

    .search-cell-h2 {
        line-height: 1.5;
        border-top: 2px solid #ccc;
        font-size: 30px;
    }
</style>
<div class="main">

    <div id="article" class="check-account">
        <form id="J_Form" class="pt40">
            <div class="search-cell">
                <span class="search-cell-title m0-left"><s>*</s>作品名：</span>
                <div class="inline">
                    <input type="text" name="arName" data-rules="{required : true}">
                </div>
            </div>
            <div class="search-cell">
                <span class="search-cell-title m0-left"><s>*</s>作品索引：</span>
                <div class="inline">
                    <input type="text" name="index" data-rules="{required : true}">
                </div>
            </div>

            <div class="search-cell">
                <span class="search-cell-title m0-left"><s>*</s>作品组别：</span>
                <select class="search-common-cell" name="arLeave" data-rules="{required : true}">
                    <option value="0">幼儿组</option>
                    <option value="1">小学组</option>
                    <option value="2">中学组</option>
                </select>
            </div>
            <div class="search-cell audioURLDIV">
                <span class="search-cell-title m0-left"><s>*</s>音频链接</span>
                <div class="inline">
                    <input type="text" name="arRecord" style="width: 400px;" data-rules="{required : true}">
                </div>
            </div>
            <div class="search-cell">
                <span class="search-cell-title m0-left" style="vertical-align: top;"><s>*</s>文章正文</span>
                <div id="editor-part1" class="editor">

                </div>
            </div>
            <div class="row">
                <div class="form-actions text-center">
                    <a class="button button-primary J-submit">确定</a>
                </div>
            </div>
        </form>

    </div>


    <!-- 此节点内部的内容会在弹出框内显示,默认隐藏此节点-->
    <div id="adminDialog" class="bui-hidden">
        <form id="dialog-form" class="form-horizontal">

        </form>
    </div>
</div>
<script src="http://g.alicdn.com/bui/seajs/2.3.0/sea.js"></script>
<script src="http://g.alicdn.com/bui/bui/1.1.21/config.js"></script>

<script type="text/javascript" src="/javascripts/admin/wangEditor.min.js"></script>
<script type="text/javascript" src="/javascripts/admin/ximaArticle_add.js"></script>


<%- include("footer.ejs") %>