    function showAlert(option) {

        option.title ? $('.ui-alert-title').html(option.title).show() : $('.ui-alert-title').hide();
        option.text ? $('.ui-alert-text').html(option.text).show() : $('.ui-alert-text').hide();

        $('.ui-alert').show();
        $('.ui-overlay').show();
        $('.ui-alert-closed').click(function () {
            hideAlert(option);
        })
    }


