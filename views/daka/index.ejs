<script>
    function initFloatDate(now) {
        var MothString = {
            '1': 'Jan',
            '2': 'Feb',
            '3': 'Mar',
            '4': 'Apr',
            '5': 'May',
            '6': 'Jun',
            '7': 'Jul',
            '8': 'Aug',
            '9': 'Sep',
            '10': 'Oct',
            '11': 'Nov',
            '12': 'Dec'
        }
        var nowDateObj = new Date(now);
        var nowYear = nowDateObj.getFullYear(),
                nowDate = nowDateObj.getDate(),
                nowMoth = nowDateObj.getMonth(),
                nowMothString = MothString[nowMoth * 1 + 1];
        $('.date-box-icon').text(nowDate);
        $('.date-box-text').text(nowMothString + ' ' + nowDate + ', ' + nowYear);

        $('.start-btn').click(function () {
            window.location.href = '/daka/reading';
        })
    }
</script>
<script>
    var now = "<%= now %>";
    initFloatDate(now);

    $.ajax({
        type: 'GET',
        url: '/dakaApi/getUserInfo',
        success: function (data) {
            console.log(data, 'getUserInfo');
            var data = data.data[0];
            var recodeInfo = data['recodeInfo'];
            var currentSerialRecodeCounts = recodeInfo ? recodeInfo['currentSerialRecodeCounts'] || 0 : 0;
            $('.J-currentSerialRecodeCounts').text(currentSerialRecodeCounts);

        },
        dataType: 'json'
    });
</script>


